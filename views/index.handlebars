        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>EWW BURGERS WAITING TO BE DEVOURED!</h2>
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burgers/burgers-block}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
                <div class="col-md-6">
                    <h2>BURGERS ATE BY U!</h2>
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                {{> burgers/burgers-block}}
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>

                <h2>ADD BURGERS TO EAT!</h2><br>
                <form action="" class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>

                    <div class="form-group">
                        <label for="devour">Devoured?</label><br>
                        <input type="radio" name="devoured" value="0">NOT EATEN <br>
                        <input type="radio" name="devoured" value="1" checked> EATEN! <br> 
                    </div>

                    <button type="submit">ADD</button>
                </form>